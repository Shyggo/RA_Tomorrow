/* 顶部菜单切换 */

.navigation_bar {
  display: flex;
  background: #fff;
}

.none_tab {
  position: relative;
  top: 20rpx;
  color: #999;
  font-size: 32rpx;
}

/* 默认选中菜单 */

.navigation_bar .item {
  position: relative;
  flex: auto;
  font-size: 27rpx;
  width: 100rpx;
  text-align: center;
  line-height: 80rpx;
  color: #333;
  border-bottom: 6rpx solid #ddd;
}

/* 选中菜单样式 */

.navigation_bar .item.active {
  color: #333;
  border-bottom: 6rpx solid #ee3c06;
}

/* 字体 */

.navigation_bar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 8;
  right: 0;
  height: 4rpx;
}

/* 列表样式 */

.cutoff_line {
  border-bottom: 1px solid #ee3c06;
  padding-bottom: 10rpx;
}

.respective_comment {
  display: flex;
  flex-direction: row;
  /* 上下居中 */
  align-items: center;
}

.head_space {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  vertical-align: middle;
  margin: 15rpx;
}

.comment_space {
  display: flex;
  flex-direction: column;
}

.comment_content {
  font-size: 40rpx;
  margin-left: 10rpx;
  color: black;
}



/* 没有可以展示的评论 */
.null_info {
  margin-top: 40rpx;
  text-align: center;
}