/* 顶部菜单切换 */
page {
  background-color: gainsboro;
}

.navigator_bar {
  display: flex;
  background: #fff;
}

.null_signal {
  position: relative;
  top: 20rpx;
  color: #999;
  font-size: 32rpx;
}

.navigator_bar .item {
  /* 默认选中菜单 */
  position: relative;
  flex: auto;
  font-size: 27rpx;
  width: 100rpx;
  text-align: center;
  line-height: 80rpx;
  color: #333;
  border-bottom: 6rpx solid #ddd;
}



.navigator_bar .item.active {
  /* 选中菜单样式 */
  color: #333;
  border-bottom: 6rpx solid #d66058;
}



.navigator_bar .item.active:after {
  /* 字体 */
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}

/* 全部 */

.back_color {
  background-color:white;
  margin-top: 6rpx;
  width: 100%;
  margin-bottom: 6rpx;
}

.order_number {
  /* 定单编号 */
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #d4d4d4;
}
.cutoff_line {
  /* 定单编号 */
  padding: 10rpx 50rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #d4d4d4;
}

/* 内容区域 */
.order_info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  justify-items: center;
  align-items: center;
}

.order_detail {
  /* 订单明细 */
  display: flex;
  flex-direction: column;
  flex: 5;
}


.order_item {
  margin-left: 30rpx;
  padding: 20rpx;

  border-bottom: 1px solid gainsboro;
  font-size: 28rpx;
}

.order_price {
  margin-left: 20rpx;
  color: #ee3c06;
}


.order_button {
  flex: 2;
  color: darkgoldenrod;
  margin: 30rpx;
  width: 180rpx;
  height: 56rpx;
  text-align: center;
  border: 1rpx solid darkgoldenrod;
  font-size: 30rpx;
  display: inline-block;
  line-height: 56rpx;
}


