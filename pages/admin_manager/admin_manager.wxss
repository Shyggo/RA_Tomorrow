.employee_info {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 20rpx;
  border: 3rpx solid #E0E3DA;
  box-shadow:5rpx 5rpx 5rpx 5rpx #E0E3DA;
  background-color: #ffffff;
  margin: 30rpx;
  padding: 30rpx;
}

.alignment{
  width: 100%;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}


.employee_name {
  padding: 0, 0, 10rpx, 0;
  font-size: 38rpx;
  font-weight: 700;
  width: 500rpx;
  white-space:nowrap;
	text-overflow:ellipsis;
	overflow: hidden;
}
.employee_position {
  font-size: 30rpx;
  word-break: break-all;
  color: #7a7878;
  margin-top: 10rpx
}
.employee_salary {
  width: 50%;
  font-weight: bold;
  font-size: 32rpx;
  color: #ee3c06;
}

.employee_salary:before {
  /*￥*/
  content: "￥";
  font-size: 14px;
}