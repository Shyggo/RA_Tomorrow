page {
  width:100%;
  height:100%;
  }
  
  .title{
    padding: 10% 0px 10% 0px;
    text-align: center;
    font-size: 100rpx;
    line-height:1.4;
    opacity: 0.8;
    color:#ffffff;
    }

    .weather-bg{
      position: absolute;
      top:0;
      left:0;
      width:100%;
      height:100%;
      z-index:-1;
   }
  
  .respective_info {
    padding: 8px 10px;
  }
  
  .textarea80px {
    /* 输入文本框的公有属性 */
    width: 90%;
    height: 85px;
    border: 1px solid #ee3c06;
  }
  
  .input_border {
    padding: 0px 0px 0px 4%;
    margin-left: 10%;
    width: 76%;
    height: 50px;
    color: #ffffff;
    border: 2px solid #ffffff;
    border-radius: 99rpx;
  }
  
  
  /*按钮 */
  .submit_button {
    width: 78%;
    height: 50px;
    align-items: center;
    border-radius: 99rpx;
    position: fixed; 
    margin-left: 11%;
    margin-bottom: 10%;
    bottom: 0;
  }
  
  .tab {
    display: flex;
    /* 左右居中 */
    justify-content: center;
    margin-top: 80rpx;
  }
  
  .tabNum {
    background: rgb(120, 42, 221);
    color: white;
    padding: 40rpx;
    font-size: 1.4rem;
    border-radius: 40rpx;
  }

  .phcolor{
    color: #ffffff;
  }