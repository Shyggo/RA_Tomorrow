.rolling_bar{
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  white-space: nowrap;
  font-size: 14px;
  position: relative;
  overflow: hidden;
}



.rolling_bar_text{
  position: absolute;
  top:0px;
  width: 100%;
  font-size: 32rpx;
  color: #ee3c06;
  animation: scrollItps 8s linear  infinite ;
}

@keyframes scrollItps{
  0%   { left:100%;}
  100% { left:-180%; }
}
/* 顶部轮播图 */
swiper {
  height: 380rpx;
}



/* 九宫格区域 */
.function_space {
  height: 90px;
  width: 100%;
  display: flex;
  color: #666;
  flex-direction: row;
  font-size: 11px;
  justify-content: space-around;
}

.respective_func {
  display: flex;
  width: 60px;
  text-align: center;
  flex-direction: column;
}

.function_image {
  width: 50px;
  height: 50px;
  padding: 15px 12px 0 6px;
}
/* 推荐菜 */
.recommand_title {
  font-size: 45rpx;
  color: #ee3c06;
  display: flex;
  justify-content: space-between;
  margin: 35rpx 5rpx 15rpx 30rpx;
}


.dish_space {
  /*列表  */
  display: flex;
  margin: 5rpx 40rpx;
  border-bottom: 1px #ee3c06 solid;
}
.dish_img {
  width: 120rpx;
  height: 120rpx;
  min-width: 120rpx;
  margin-left: 10rpx;
  margin-right: 30rpx;
}
.dish_name {
  font-size: 38rpx;
  width: 500rpx;
  white-space:nowrap;
	text-overflow:ellipsis;
	overflow: hidden;
}
.dish_sold {
  font-size: 30rpx;
  color: gray;
}
.dish_price {
  /*价格*/
  font-weight: bold;
  font-size: 32rpx;
  color: #ee3c06;
}

.dish_price:before {
  /*人民币符号*/
  content: "￥";
  font-size: 14px;
}

.rolling_level {
  display: flex;
  flex-direction: row; 
}

/* 搜索框 */
.search_space {
  background: rgb(255, 255, 255);
  padding: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.user_input {
  flex: 1;
  height: 70rpx;
  padding-left: 30rpx;
  border: 1px solid #ee3c06;
  border-radius: 30rpx;
}

.search_pattern {
  width: 70rpx;
  height: 70rpx;
  margin: 0 15rpx;
}

